{
  "expo": {
    "name": "XNautical",
    "slug": "XNautical",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/Logos/XNautical-Logo-Square.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/Logos/XNautical-Logo-Square.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "deploymentTarget": "15.5",
      "bundleIdentifier": "com.xnautical.app",
      "googleServicesFile": "./GoogleService-Info.plist",
      "config": {
        "googleMapsApiKey": "YOUR_GOOGLE_MAPS_API_KEY"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/Logos/XNautical-Logo-Square.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.xnautical.app",
      "googleServicesFile": "./google-services.json",
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY"
        }
      }
    },
    "web": {
      "favicon": "./assets/Logos/XNautical-Logo-Square.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow XNautical to access your location for chart navigation."
        }
      ],
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsImpl": "mapbox"
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow XNautical to use Face ID for quick sign-in."
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/crashlytics",
      "@react-native-firebase/auth",
      "expo-sqlite",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow XNautical to access your photos to attach to waypoints.",
          "cameraPermission": "Allow XNautical to use the camera to take photos for waypoints."
        }
      ],
      "./plugins/local-tile-server/withLocalTileServer.js",
      "./plugins/gnss-satellite-tracker/withGnssSatellite.js"
    ]
  }
}
