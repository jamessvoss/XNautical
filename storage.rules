rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Chart files - readable by authenticated users
    match /charts/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admin/server can upload charts
    }
    
    // Predictions bundle - publicly readable
    match /predictions/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if false; // Only server can upload
    }
    
    // User uploads (if needed in future)
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
